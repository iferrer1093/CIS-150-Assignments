<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="_1st_UWP_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_1st_UWP_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20">
        <TextBox x:Name="IdBox" Header="ID" PlaceholderText="Enter ID"/>
        <TextBox x:Name="FirstNameBox" Header="First Name" PlaceholderText="Enter first name"/>
        <TextBox x:Name="LastNameBox" Header="Last Name" PlaceholderText="Enter last name"/>
        <TextBox x:Name="ClassBox" Header="Class" PlaceholderText="Enter class name"/>
        <TextBox x:Name="GradeBox" Header="Grade" PlaceholderText="Enter grade"/>

        <Button Content="Add Student" Click="AddStudent_Click" Margin="0,10"/>
        <ListBox x:Name="StudentList" Height="200" Margin="0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save to CSV" Click="SaveButton_Click" Margin="10"/>
            <Button Content="Load from CSV" Click="LoadButton_Click" Margin="10"/>
        </StackPanel>
    </StackPanel>
</Page>
